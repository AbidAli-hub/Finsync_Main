# Government Portal Configuration
# Set to 'true' to use real government API, 'false' for enhanced mock
USE_REAL_GOVERNMENT_API=false

# Real Government API Configuration (when USE_REAL_GOVERNMENT_API=true)
GOVERNMENT_API_URL=https://api.gst.gov.in
GOVERNMENT_API_KEY=your_government_api_key_here
GOVERNMENT_API_TIMEOUT=30000

# Google API Key for GST extraction
GOOGLE_API_KEY=your_google_api_key_here

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=finsync
DATABASE_URL=mysql://root:your_mysql_password@localhost:3306/finsync